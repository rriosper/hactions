{
  "name": "rrios-hactions",
  "description": "Tools to ease the action handling state",
  "main": "dist/lib.js",
  "module": "dist/lib.es.js",
  "types": "dist/index.d.ts",
  "author": "Roberto RÃ­os <roberto.rios.perea@outlook.com>",
  "license": "MIT",
  "files": [
    "dist",
    "CHANGELOG.md",
    "package.json",
    "package-lock.json",
    "License.txt",
    "README.md"
  ],
  "keywords": [
    "Actions",
    "Reducer",
    "Handle state",
    "Flux"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rriosper/hactions"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && rollup -c",
    "lint": "eslint src --ext ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --passWithNoTests --watch",
    "coverage": "jest --passWithNoTests --coverage",
    "format": "prettier src --write",
    "docs": "typedoc --mode modules --out docs src",
    "validation": "npm run lint && npm run test"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.7",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "redux": "^4.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.5",
    "rollup-plugin-typescript2": "^0.27.2",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.18.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format && git add .",
      "pre-push": "npm run test"
    }
  }
}
